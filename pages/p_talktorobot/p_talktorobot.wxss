/* pages/p_talktorobot/p_talktorobot.wxss */
page{
  width: 100%;
  height: 100%;
}
#pagebox{
  background: url('http://ooo0o.com/images/bgpic15.png') no-repeat;
  background-size: 100% 100%;
  width: 100%;
  height: 100%;
}
.header,.content{
  width: 650rpx;
  margin: 0 auto;
}
.header{
  line-height: 80rpx;
  font-size: 35rpx;
  color: #ccc;
  background-color: rgba(255,255,255,0.5);
  text-align: center;
  margin: 0 auto 20rpx;
  border-radius: 10rpx;
}
.topkong{
  height: 30rpx;
}
.content{
  border: 4rpx solid #FFCC00;
  background-color: rgba(255,255,255,0.2);
}
.talkbox{
  padding: 20rpx 15rpx;
  height: 800rpx;

  width: 620rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.talk_left{
  float: left;
  width: 100%;
  margin-top: 20rpx;
}
.talk_leftpic{
  float: left;
  background-size: 100% 100%;
  border-radius: 50%;
  overflow: hidden;
  width:80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.talk_lefttext{
  float: left;
  padding: 15rpx 5rpx 15rpx 25rpx;
  max-width: 420rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  text-align: left;
  background-color: rgba(255,255,255,0.2);
}

.talk_right{
  float: right;
  width: 100%;
  margin-top: 20rpx;
}
.talk_rightpic{
  float: right;
  background-size: 100% 100%;
  border-radius: 50%;
  overflow: hidden;
  width:80rpx;
  height: 80rpx;
  margin-left: 20rpx;
}
.talk_righttext{
  float: right;
  padding: 15rpx 5rpx 15rpx 25rpx;
  max-width: 420rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  text-align: left;
  background-color: rgba(255,255,255,0.2);
}

.talkipt_btnbox{
  background-color: rgba(255,255,255,0.2);
  position: relative;
  padding: 15rpx 35rpx;
  height: 75rpx;
}
.talkipt{
  width: 460rpx;
  height:75rpx;
  background-color: #fff;
  display: block;
  float: left;
  border-radius: 10rpx;
}
.talkbtnt{
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translate(0,-50%);
  padding: 0 30rpx;
  line-height: 75rpx;
  font-size: 30rpx;
}

.footer{
  color: #ccc;
  font-size: 45rpx;
  text-align: center;
  margin: 20rpx auto 0;
}