/* 音乐播放按钮 */
.muspic{
  width: 80rpx;
  height: 80rpx;
}
.musbox{
  position: fixed;
  top: 20rpx; 
  right: 15rpx;
  z-index:100
}
.musrotate{
  animation:mymove 3s infinite linear;
}
@keyframes mymove{
  0%{
    transform: rotate(0)
  }
  100%{
    transform: rotate(360deg)
  }
}

